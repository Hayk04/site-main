<div class="container">
	<div class="row">
		<div class="col">
			<%= link_to 'New Post', new_admin_post_path(), class: 'btn btn-primary m-2 text-white' %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 mx-auto">
			<table class="table table-border table-hover">
				<thead class="table-dark">
					<tr>
						<th>Title</th>
						<th>Content</th>
						<th>Edit</th>
						<th>Delete</th>
					</tr>
				</thead>
				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td><%= link_to post.title, admin_post_path(post) %></td>
							<td><%= sanitize post.content.truncate(200, separator: ' ')  %></td>
							<td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-info' %></td>
							<td><%= button_to 'Delete', [:admin, post], class: 'btn btn-danger', method: :delete %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>